<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoFuel" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/eco_fuel_primary_night</item>
        <item name="colorPrimaryVariant">@color/eco_fuel_primary_variant_night</item>
        <item name="colorOnPrimary">@color/eco_fuel_on_primary_night</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/eco_fuel_secondary_night</item>
        <item name="colorSecondaryVariant">@color/eco_fuel_secondary_variant_night</item>
        <item name="colorOnSecondary">@color/eco_fuel_on_secondary_night</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/eco_fuel_background_night</item>
        <item name="colorOnBackground">@color/eco_fuel_on_background_night</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/eco_fuel_surface_night</item>
        <item name="colorOnSurface">@color/eco_fuel_on_surface_night</item>

        <!-- Error colors -->
        <item name="colorError">@color/eco_fuel_error_night</item>
        <item name="colorOnError">@color/eco_fuel_on_error_night</item>

        <item name="iconTint">@color/eco_fuel_icon_tint_night</item>
    </style>

    <style name="Theme.EcoFuel" parent="Base.Theme.EcoFuel" />
</resources>
